<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>

	<% include ../partials/style %>

	<style>
		body{
			margin-left: 100px;
			width: 900px;
		}
		#nav_deals{
			color: white;
		}
		header{
			margin-bottom: 100px;
		}
	</style>

</head>

<body>
	<header>
		<% include ../partials/header %>
	</header>

	<h3>About You</h3>

	<form method="POST" action="/userinfo">
		<div class="form-group">
			<label >Name</label>
			<input type="name" class="form-control" name="username" placeholder="John Smith">
		</div>
		<div class="form-group">
			<label>Email Address</label>
			<input type="email" class="form-control" name="email" placeholder="name@example.com">
		</div>
		<h5>Gender</h5>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="gender" value="Male">
			<label class="form-check-label" >Male</label>
			<input class="form-check-input" type="radio" name="gender" value="Female">
			<label class="form-check-label" >Female</label>
		</div>

	<% dat.forEach(function(questions) { %>
	<h3>Question <%= questions.id %></h3>
	
		<h5><%= questions.question %></h5>
		
		<% data.forEach(function(choices) { %>
			<input type="radio" name="q<%= questions.id %>" value="<%= choices.id %>"> 
			<%= choices.choice %><br>
		<% }); %>
	
	<% }); %>

	<button type="submit" class="btn btn-success">Submit</button>
	</form>





<!-- Footer -->
<% include ../partials/footer %>
<!-- Footer -->

</body>
</html>